<h1>New Chat</h1>
<%= form_with scope: :chat, url: chats_path, local: true do |form| %>
  <% if @chat.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@chat.errors.count, "error") %>
        prohibited this article from being saved:
      </h2>
      <ul>
        <% @chat.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %><br>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Go back', chats_path %>
